# Required
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?pgbouncer=true"
JWT_SECRET="your-secret-key-min-32-chars"

# Optional — direct connection used by prisma migrate (no pgbouncer)
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# Optional — allowed CORS origin (default: http://localhost:3000)
FRONTEND_URL="http://localhost:3000"

# Required — Supabase Storage (no SDK needed, uses REST API)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Optional — Redis cache (default: redis://localhost:6379)
REDIS_URL="redis://localhost:6379"

# Optional — server port (default: 4000)
PORT=4000

# Optional — SMTP for email sending (emails disabled if not set)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@techlearn.app"

# Optional — OpenTelemetry
# Set OTEL_SDK_DISABLED=true to turn off all tracing/metrics (e.g. in CI/tests)
OTEL_SDK_DISABLED=false
OTEL_SERVICE_NAME=techlearn-backend
# OTLP HTTP endpoint — Jaeger all-in-one (docker-compose) or any OTLP backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
